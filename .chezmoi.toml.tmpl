{{/* boolean feature tags */}}
{{- $gui := false -}}       {{/* true if this machine is one where I typically 
                                 log into a desktop environment */}}
{{- $update := false -}}    {{/* true if chezmoi should run updates on this 
                                 computer */}}
{{- $install := false -}}   {{/* true if chezmoi should install software */}}
{{- $perl := false -}}      {{/* true if chezmoi should install perl mods */}}
{{- "" -}}

{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{- if eq .chezmoi.hostname "BURNHAM" "TONKEE" "RATIGAN" "POISONIVY" -}}
{{-    if eq $osid "windows" -}}
{{-       $gui = true -}}
{{-    end -}}
{{-    $install = true -}}
{{-    $update = true -}}
{{- end -}}

[data]
    osid = {{ $osid | quote }}
    gui = {{ $gui }}
    update = {{ $update }}
    install = {{ $install }}
    perl = {{ $perl }}
    hostname = {{ .chezmoi.hostname | quote }}

{{ if $gui -}}
[edit]
    command = "code"
    args = "--wait"

[diff]
    command = "code"
    args = ["--wait", "--diff"]
{{- else -}}
[edit]
    command = "nano"

[diff]
    command = "diff"
{{- end}}

[git]
    autoCommit = true
    autoPush = true
