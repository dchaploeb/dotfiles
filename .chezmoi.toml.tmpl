{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

[data]
    osid = {{ $osid | quote }}
    perl = 0

{{- if .gui -}}
[edit]
    command = "code"
    args = "--wait"

[diff]
    command = "code"
    args = ["--wait", "--diff"]
{{- end -}}
{{- if .gui -}}
[edit]
    command = "nano"

[diff]
    command = "diff"
{{- end -}}
[git]
    autoCommit = true
    autoPush = true